{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src",
    "target": "ES2022",
    "strict": true,
    "esModuleInterop": true,        
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}